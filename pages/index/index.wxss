/**index.wxss**/

.container {
  color: #fff;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.weui-tabbar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
}

.bg image {
  width: 100vw;
  height: 100vh;
  z-index: 1;
}

.wrapper {
  width: 100vw;
  height: 50vh;
  position: absolute;
  top: 0;
  z-index: 2;
}

.wrapper .temp-box {
  margin-top: 80rpx;
  text-align: center;
  color: #fff;
}

.d-block {
  display: block;
}

.wrapper .temp-text {
  font-size: 150rpx;
  text-align: right;
}
